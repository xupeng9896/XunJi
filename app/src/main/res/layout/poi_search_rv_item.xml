<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/poi_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_search_record_card_item_divider"
        android:paddingLeft="@dimen/activity_search_record_card_item_divider"
        android:paddingRight="@dimen/activity_search_record_card_item_divider"
        android:paddingTop="@dimen/activity_search_record_card_item_divider">

        <TextView
            android:id="@+id/poi_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="世界之窗"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/poi_item_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="1号线"
            android:textColor="@color/blackGray"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>