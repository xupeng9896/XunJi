<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_personal_choose_left_margin"
    android:layout_marginTop="@dimen/activity_personal_rv_divider_size"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/drawer_layout_item_image"
        android:layout_width="@dimen/activity_personal_rv_divider_size"
        android:layout_height="@dimen/activity_personal_rv_divider_size" />

    <TextView
        android:id="@+id/drawer_layout_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:textColor="@color/black"
        android:textSize="@dimen/activity_personal_choose_text_size" />
</LinearLayout>