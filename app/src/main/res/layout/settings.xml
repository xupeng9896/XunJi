<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/page_module_toolbar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/settings_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exchange_login_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/exchange_login"
            android:textColor="@color/darkOrange"
            android:background="@color/brightGray"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/exit_login_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/exit_login"
            android:textColor="@color/darkOrange"
            android:background="@color/brightGray"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>