<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/grayWhite">

    <com.angel.view.SWImageView
        android:id="@+id/search_track_rv_item_image"
        android:layout_width="@dimen/activity_search_track_rv_image_width"
        android:layout_height="@dimen/activity_search_track_rv_image_height"
        app:type="round"
        app:borderWidth="1dp"
        app:borderColor="0"
        app:borderRadius="8dp" />

    <TextView
        android:id="@+id/search_track_rv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_main_margin1"
        android:layout_marginBottom="@dimen/activity_main_margin1"
        android:text="金井镇"
        android:textSize="@dimen/activity_search_track_recycler_item_text_size" />
</LinearLayout>